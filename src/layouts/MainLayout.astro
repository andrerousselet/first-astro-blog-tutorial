---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import MainHead from "./MainHead.astro";

type Props = {
  metaTitle?: string;
  description?: string;
};

const {
  metaTitle = "My Astro Blog",
  description = "My first take on Astro framework",
} = Astro.props as Props;
---

<html lang="en">
  <MainHead {metaTitle} {description} />
  <body class="min-h-screen grid">
    <Nav />
    <main class="w-full max-w-7xl m-auto px-4 sm:px-6 lg:px-8">
      <slot>Default Text</slot>
    </main>
    <Footer />
  </body>
</html>
