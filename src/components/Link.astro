---
import { Icon } from "astro-icon";

type Props = {
  text: string;
  href: string;
  class: string;
  icon?: {
    name: string;
    side: "left" | "right";
  };
};

const { text, href, icon,...rest } = Astro.props as Props;
---

<a {href} {...rest}>
  {
    icon && icon.side === "left" && (
      <Icon name={icon.name} height="24" width="24" />
    )
  }
  <span class="font-bold">{text}</span>
  {
    icon && icon.side === "right" && (
      <Icon name={icon.name} height="24" width="24" />
    )
  }
</a>
