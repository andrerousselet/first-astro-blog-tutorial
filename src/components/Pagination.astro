---
import Link from "./Link.astro";

const { prevUrl, nextUrl } = Astro.props;
---

<nav class="flex items-center justify-between gap-6" aria-label="Blog Pages">
  {
    prevUrl && (
      <Link
        href={prevUrl}
        text="Prev"
        icon={{ name: "ic:baseline-keyboard-arrow-left", side: "left" }}
        class="text-primary-hover text-xs flex items-center justify-between pl-1 pr-3 py-1 gap-1 border-2 border-primary-hover hover:border-secondary-hover hover:text-secondary-hover hover:shadow rounded transition"
        size={20}
      />
    )
  }
  {
    nextUrl && (
      <Link
        href={nextUrl}
        text="Next"
        icon={{ name: "ic:baseline-keyboard-arrow-right", side: "right" }}
        class="text-primary-hover text-xs flex items-center justify-between pl-3 pr-1 py-1 gap-1 border-2 border-primary-hover hover:border-secondary-hover hover:text-secondary-hover hover:shadow rounded transition"
        size={20}
      />
    )
  }
</nav>
