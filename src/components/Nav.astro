---
import { Icon } from "astro-icon";
import navData from "../data/navData";
import Link from "./Link.astro";
---

<nav class="w-full">
  <div
    class="max-w-7xl mx-auto bg-gray-100 shadow-md px-4 py-6 sm:px-6 lg:px-8 flex items-center justify-between"
  >
    <a href="/" aria-label="Go home">
      <Icon name="logomark" width="60" />
    </a>
    <ul class="flex space-x-4">
      {
        navData.map((navItem) => (
          <li>
            <Link
              text={navItem.name}
              href={navItem.path}
              class="font-bold py-1 px-4 rounded-md flex items-center justify-center gap-1 transition hover:text-secondary"
            />
          </li>
        ))
      }
    </ul>
  </div>
</nav>
